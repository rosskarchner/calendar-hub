{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:*:*:*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "ses:SendEmail",
        "ses:SendRawEmail",
        "ses:SendTemplatedEmail",
        "ses:CreateContact",
        "ses:DeleteContact",
        "ses:GetContact",
        "ses:ListContacts",
        "ses:UpdateContact",
        "ses:GetEmailTemplate",
        "ses:CreateEmailTemplate",
        "ses:UpdateEmailTemplate",
        "ses:DeleteEmailTemplate",
        "ses:GetContactList",
        "ses:CreateContactList",
        "ses:UpdateContactList",
        "ses:DeleteContactList"
      ],
      "Resource": [
        "arn:aws:ses:*:*:identity/*",
        "arn:aws:ses:*:*:configuration-set/*",
        "arn:aws:ses:*:*:contact-list/*",
        "arn:aws:ses:*:*:template/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "secretsmanager:GetSecretValue"
      ],
      "Resource": "arn:aws:secretsmanager:*:*:secret:newsletter/*"
    }
  ]
}